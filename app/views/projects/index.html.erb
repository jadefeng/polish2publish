<h1>Manuscripts</h1>

<div class="row">
  <% @projects.each do |project| %>
      <div class="col-md-4">
              <div class="well well-sm">
                  <div class="media">
                          <%= link_to image_tag( project.icon.url(:thumb) ) , project.file.url %>
                      <div class="media-body">
                          <h4 class="media-heading"><%= project.title %></h4>
                      <p><span class="label label-info"><%= project.category.name %></span> <span class="label label-warning"><%= project.genre.name %></span></p>
                          <p>
                          Author: <%= project.author.name %>
                          </p>
                      </div>
                  </div>
              </div>
          </div>

  <% end %>
</div>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Genre</th>
      <th>State</th>
      <th>Photo</th>
      <th>Url</th>
      <th>Editor</th>
      <th>Author</th>
      <th>Page no</th>
      <th>Word count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.category_id %></td>
        <td><%= project.genre_id %></td>
        <td><%= project.state_id %></td>
        <td><%= image_tag( project.icon.url(:thumb) ) %></td>
        <td><%= link_to 'Download file', project.file.url %></td>
        <td><%= project.editor_id %></td>
        <td><%= project.author_id %></td>
        <td><%= project.page_no %></td>
        <td><%= project.word_count %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
